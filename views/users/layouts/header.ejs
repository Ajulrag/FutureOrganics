<header id="header">
    <div class="container">
        <div class="header-top" style="height: 75px;">
            <div class="row align-items-center" style="height:80px;">
                <!-- Header Left -->
                <div class="col-lg-5 col-md-5 col-sm-12">
                    <!-- Main Menu -->
                    <div id="main-menu">
                        <ul class="menu">
                            <li class="dropdown">
                                <a href="/" title="Homepage">Home</a>
                            </li>
                            
                            <li class="dropdown">
                                <a href="#" title="Product">Categories</a>
                            </li>
                        
                            <li>
                                <a href="#">About Us</a>
                            </li>
                            
