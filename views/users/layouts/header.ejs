                    </div>
                </div>
                
                <!-- Header Center -->
                <div class="col-lg-2 block-cart col-md-2 col-sm-12 header-center justify-content-center ">
                    <!-- Logo -->
                    <div class="logo">
                        <a href="/">
                            <img class="img-responsive" src="img/FUTURELOGO1.png" alt="Logo" style="height: 80px;padding-left: 14px;">
