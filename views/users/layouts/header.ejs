                                <% if(usersession) { %>
                                <a href="/logout" title="My Wishlists"><i class="fa fa-sign-out"></i>Logout</a>
                                <% }else{ %>
                                <a href="/login" title="Log in to your customer account"><i class="fa fa-sign-in"></i>Login</a>
                               <% } %>
                                
                            
                            </div>
                            
