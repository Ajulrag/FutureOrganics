<%- include('../users/layouts/head')%>
<%- include('../users/layouts/header') %> 
<main>

  <% if(!products || products?.products.length < 1){ %>
    <div style="align-items: center;text-align: center;justify-content: center;">
    <section class="d-flex align-items-center justify-content-center empty-cart">
      <img src="/img/empty-cart.jpg" style="height: 250px;margin-top: 50px;" alt="">
      
        <hr>
       
    </section>
    <p class="fa fa-shopping-cart" style="font-size:16px;color:rgb(22, 24, 23);margin-top: 30px;">YOU DONT HAVE ANY PRODUCT INYOUR CART!!!</p>
    <div style="border: 2px solid rgb(255, 255, 255); background-color: rgb(255, 255, 255); color: aqua;margin-top: 50px;"><button style="border: 1px solid black;border-radius: 8px;background-color: rgb(212, 130, 21);"><a style="color: aliceblue;" href="/getallproducts">Continue Shopping</a></button></div>
  </div>
   
    <% } else { %>
<div class="page-title-overlap bg-dark pt-4">
    <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
      
      <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
        
        <nav aria-label="breadcrumb">
          
          <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-start">
            
            <li class="breadcrumb-item"><a class="text-nowrap" href="/"><i class="ci-home"></i>Home</a></li>
            <li class="breadcrumb-item text-nowrap"><a href="/getallproducts">Shop</a>
            </li>
            <li class="breadcrumb-item text-nowrap active" aria-current="page">Cart</li>
          </ol>
        </nav>
      </div>
      <div class="order-lg-1 pe-lg-4 text-center text-lg-start">
        <h1 class="h3 text-light mb-0">Your cart</h1>
      </div>
    </div>
  </div>
  <div class="container pb-5 mb-2 mb-md-4">
    <div class="row">
      <!-- List of items-->
      <section class="col-lg-8">
        <div class="d-flex justify-content-between align-items-center pt-3 pb-4 pb-sm-5 mt-1">
          <h2 class="h6 text-light mb-0">Products</h2><a class="btn btn-outline-primary btn-sm ps-2" href="/getallproducts"><i class="ci-arrow-left me-2"></i>Continue shopping</a>
        </div>
        <% let total=0 %>
        <% products.products.forEach(product => {%>
       
        <!-- Item-->
        <div class="d-sm-flex justify-content-between align-items-center my-2 pb-3 border-bottom">
          
          <div class="d-block d-sm-flex align-items-center text-center text-sm-start"><a class="d-inline-block flex-shrink-0 mx-auto me-sm-4" href="/singleproduct/<%= product.proId._id %>"><img src="<%= product.image %>" width="160" alt="Product"></a>
            <div class="pt-2">
              <h3 class="product-title fs-base mb-2"><a href="/singleproduct/<%= product.proId._id %>"><%= product.name%></a></h3>
             
              <div class="fs-lg text-accent pt-2"><%= (product.price)*(product.quantity)%><small>00</small></div>
     
              <%total +=  (product.price)*product.quantity %>
            </div>
          </div>

          <div class="qty-wrap" >

            <button class="qty-btn dec" data-id="<%= product.proId._id %>" value="-" id="dec<%= product.proId._id%>" onclick="updateCart(-1, this)">-</button>

            <input type="text" style="width: 24px"  value="<%= product.quantity %>" disabled>
            <button class="qty-btn inc" data-id="<%= product.proId._id %>" value="+" id="inc<%= product.proId._id%>" onclick="updateCart(1, this)">+</button>

            
              <a href="/cart/remove/<%= product.proId._id %>" data-id = '<%=product.proId._id%>' id="dlt-btn"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
              </svg></a>

        </div>
     
        </div>
        
        <%}) %>
       
       
      </section>
      <!-- Sidebar-->
      <aside class="col-lg-4 pt-4 pt-lg-0 ps-xl-5">
        <div class="bg-white rounded-3 shadow-lg p-4">
          <div class="py-2 px-xl-2">
            <div class="text-center mb-4 pb-3 border-bottom">
              <h2 class="h6 mb-3 pb-1">Subtotal</h2>
              <p class="fw-normal">RS: <%= total%><small>.00</small></p>
            </div>
            
            <div class="accordion" id="order-options">
              <div class="accordion-item">
                <h3 class="accordion-header"><a class="accordion-button" href="#promo-code" role="button" data-bs-toggle="collapse" aria-expanded="true" aria-controls="promo-code">Apply promo code</a></h3>
                <div class="accordion-collapse collapse show" id="promo-code" data-bs-parent="#order-options">
                  <form class="accordion-body needs-validation" method="post" novalidate>
                    <div class="mb-3">
                      <input class="form-control" type="text" placeholder="Promo code" required>
                      <div class="invalid-feedback">Please provide promo code.</div>
                    </div>
                    <button class="btn btn-outline-primary d-block w-100" type="submit">Apply promo code</button>
                  </form>
                </div>
              </div>
              
            </div><a class="btn btn-primary btn-shadow d-block w-100 mt-4" href="/cart/checkout"><i class="ci-card fs-lg me-2"></i>Proceed to Checkout</a>
          </div>
        </div>
      </aside>
    </div>
  </div>
  <% } %>
</main>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
  let incrementBtn = document.getElementsByClassName('inc');
  let decrementBtn = document.getElementsByClassName('dec');
  


  function removeFromCart(e) {
    fetch(`/cart/remove/${e.dataset.id}`)
    .then((response)=> response.json())
    .then((data)=> {
      if (data.success) {
        location.reload()
      }
    })
  }
    
    //UPDATE CART REQUEST
    function updateCart(reqaction, e) {

      if (reqaction == -1 && e.parentElement.children[1].value == 1 ) {
        swal({
  title: "Are you sure?",
  text: "Do you want to remove this product from cart",
  icon: "warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {   
    return removeFromCart(e)
  } else {
    swal("Your product safe!");
  }
});
      } else {
        fetch(`/cart/update?q=${e.dataset.id}`,
            {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    action: reqaction
                })
            }).then(res => res.json())
            .then(data =>{
              if (data.success) {
                let input = e.parentElement.children[1]
              input.value = reqaction == -1 ? Number(input.value) -1 : Number(input.value) +1
              } else {
                if(data.message == "cart deleted"){
                    window.location.reload();
                }
                else {
                  alert(data.message)
                }
              }
            
            })
            .catch(err => {
              alert(err);
            })
      }

       
    }


  const dltBtn = document.getElementById('dlt-btn');
  dltBtn.addEventListener('click', (e)=> {
    e.preventDefault();
    
    if ( confirm('Are you sure want to remove this product from your cart?')) {
      removeFromCart(e)
    } else {
      alert( 'okay')
    }
  })
</script>
