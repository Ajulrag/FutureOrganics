<%- include('../admin/layouts/adminHeader') %>
<div class="col-lg" style="padding: 30px;">
  <div class="card"  style="height: 100vh;">
    <div class="card-body" >
      <form action="/admin/usermanagment/edituser/<%=userData._id%>" method="post" >
        
        <div class="form-group">
          <label>Name</label>
          <input type="text" value="<%=userData.name%>" class="form-control" name="name" required />
        </div>

        <div class="form-group">
          <label>Email</label>
          <input type="text" value="<%=userData.email%>" class="form-control"  name="email" required />
        </div>
        
        <div class="form-group" style="padding-top: 15px;">
          <label>Mobile</label>
          <input type="text" value="<%=userData.mobile%>" class="form-control" name="mobile" required />
        </div>
        <div  style="padding-top: 15px;">
        <select name="status" class="form-control" >
            <option value="Blocked">Block</option>
            <option value="Unblocked">Unblock</option>
          </select>
        </div>
        <div style="padding-top: 60px;">
        <button type="submit" class="btn btn-primary" >Update</button>
    </div>     
      </form>

    
    </div>
  </div>
</div>
